---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import { BatteryFinder } from '../components/BatteryFinder';
import { Car, Zap, Factory, Sun, Truck, ShieldCheck, Clock, HeadphonesIcon, ChevronRight, ArrowRight, Battery } from 'lucide-react';

const categories = [
  { title: "Automotive", icon: Car, desc: "Start every journey reliably" },
  { title: "Inverter / UPS", icon: Zap, desc: "Uninterrupted home power" },
  { title: "Industrial", icon: Factory, desc: "Heavy-duty power banks" },
  { title: "Solar", icon: Sun, desc: "Renewable storage solutions" },
  { title: "EV / Specialty", icon: Truck, desc: "The future of mobility" },
];

const features = [
  { title: "Certified Products", icon: ShieldCheck, desc: "Rigorous testing to international standards." },
  { title: "Bulk Capability", icon: Factory, desc: "Supplying massive enterprise requirements." },
  { title: "Fast Delivery", icon: Clock, desc: "Logistics network optimized for speed." },
  { title: "Expert Support", icon: HeadphonesIcon, desc: "Technical guidance whenever you need it." },
];
---

<Layout title="VoltCore - Premium Battery Solutions">
  <div class="flex min-h-screen flex-col">
    <Navbar />

    <main class="flex-1">
      <!-- Hero Section -->
      <section class="relative h-[80vh] flex items-center overflow-hidden bg-zinc-950">
        <div class="absolute inset-0 z-0">
          <img
            src="/industrial-warehouse-batteries-rack.jpg"
            alt="Industrial Battery Warehouse"
            class="w-full h-full object-cover opacity-40 grayscale"
          />
        </div>
        <div class="container relative z-10 mx-auto px-4 w-full">
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">
            <!-- LEFT: Hero Text -->
            <div class="lg:col-span-6 space-y-6">
              <div class="inline-flex items-center rounded-full bg-primary/10 border border-primary/20 px-3 py-1 text-xs font-medium text-primary uppercase tracking-widest">
                Certified Energy Solutions
              </div>
              <h1 class="text-5xl md:text-7xl font-bold tracking-tighter text-white leading-[1.1]">
                Reliable Power Solutions for <span class="text-primary">Homes & Industries</span>
              </h1>
              <p class="text-lg text-zinc-400 max-w-xl">
                High-performance energy storage and power backup solutions engineered for durability, reliability, and maximum efficiency.
              </p>
              <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <Button size="lg" class="h-14 px-8 text-base font-semibold group" href="/products">
                  Buy for Home / Retail
                  <ChevronRight className="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform" />
                </Button>
                <Button variant="outline" size="lg" class="h-14 px-8 text-base font-semibold border-white/20 text-white hover:bg-white/10 bg-transparent" href="/b2b">
                  Business & Bulk Orders
                </Button>
              </div>
            </div>

            <!-- RIGHT: Battery Finder -->
            <div class="lg:col-span-6 flex items-center justify-center lg:justify-end">
              <div class="w-full max-w-sm">
                <BatteryFinder client:load />
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Categories Grid -->
      <section class="py-24 bg-background">
        <div class="container mx-auto px-4">
          <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6">
            <div class="space-y-2">
              <h2 class="text-3xl font-bold tracking-tight uppercase">Battery Categories</h2>
              <div class="h-1 w-20 bg-primary"></div>
            </div>
            <a href="/products" class="text-sm font-semibold flex items-center gap-1 hover:text-primary transition-colors">
              View All Categories <ArrowRight className="h-4 w-4" />
            </a>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6">
            {categories.map((category) => (
              <Card class="group hover:border-primary transition-all duration-300 cursor-pointer overflow-hidden border-zinc-200">
                <div class="p-8 flex flex-col items-center text-center space-y-4">
                  <div class="p-4 rounded-full bg-secondary group-hover:bg-primary/10 transition-colors">
                    <category.icon className="h-8 w-8 text-foreground group-hover:text-primary" />
                  </div>
                  <div class="space-y-1">
                    <h3 class="font-bold uppercase tracking-tight text-lg">{category.title}</h3>
                    <p class="text-sm text-muted-foreground">{category.desc}</p>
                  </div>
                </div>
              </Card>
            ))}
          </div>
        </div>
      </section>

      <!-- Why Choose Us -->
      <section class="py-24 bg-zinc-100">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="space-y-8">
              <div class="space-y-4">
                <h2 class="text-4xl font-bold tracking-tight">Engineered for Excellence</h2>
                <p class="text-muted-foreground text-lg">
                  With over 15 years in the energy sector, we provide more than just batteries—we provide peace of mind for your critical operations.
                </p>
              </div>

              <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
                {features.map((feature) => (
                  <div class="flex gap-4">
                    <div class="flex-shrink-0">
                      <feature.icon className="h-6 w-6 text-primary" />
                    </div>
                    <div class="space-y-1">
                      <h4 class="font-bold text-sm uppercase tracking-wider">{feature.title}</h4>
                      <p class="text-sm text-muted-foreground leading-relaxed">{feature.desc}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <div class="relative aspect-square">
              <img
                src="/industrial-battery-lead-acid-high-quality.jpg"
                alt="High Quality Battery"
                class="w-full h-full object-cover rounded-lg shadow-2xl"
              />
              <div class="absolute -bottom-6 -left-6 bg-primary p-8 text-white hidden md:block">
                <p class="text-4xl font-black italic">15+</p>
                <p class="text-xs font-bold uppercase tracking-widest">Years of Trust</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-24 bg-zinc-950 text-white">
        <div class="container mx-auto px-4 text-center space-y-8">
          <h2 class="text-3xl md:text-5xl font-bold tracking-tighter">Need help choosing a battery?</h2>
          <p class="text-zinc-400 text-lg max-w-2xl mx-auto">
            Our engineers are ready to help you find the perfect power solution for your specific requirements.
          </p>
          <div class="flex flex-col sm:flex-row justify-center gap-4">
            <Button size="lg" class="h-14 px-8 font-bold">Talk to an Expert</Button>
            <Button variant="outline" size="lg" class="h-14 px-8 font-bold border-white/20 hover:bg-white/10 bg-transparent">
              View Catalog
            </Button>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="border-t bg-zinc-50 py-12">
      <div class="container mx-auto px-4">
	  9:24 PM<div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-12">
          <div class="col-span-2 space-y-6">
            <a href="/" class="flex items-center gap-2 font-bold tracking-tighter text-xl">
              <Battery className="h-6 w-6 text-primary fill-primary/20" />
              <span>VOLT<span class="text-primary">CORE</span></span>
            </a>
            <p class="text-sm text-muted-foreground max-w-xs leading-relaxed">
              Premium battery solutions for industrial, commercial, and residential applications.
            </p>
          </div>
          <div class="space-y-4">
            <h4 class="font-bold text-xs uppercase tracking-[0.2em]">Products</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li><a href="#" class="hover:text-primary">Automotive</a></li>
              <li><a href="#" class="hover:text-primary">Inverters</a></li>
              <li><a href="#" class="hover:text-primary">Solar Power</a></li>
            </ul>
          </div>
          <div class="space-y-4">
            <h4 class="font-bold text-xs uppercase tracking-[0.2em]">Company</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li><a href="#" class="hover:text-primary">About Us</a></li>
              <li><a href="#" class="hover:text-primary">B2B Portal</a></li>
              <li><a href="#" class="hover:text-primary">Support</a></li>
            </ul>
          </div>
          <div class="space-y-4">
            <h4 class="font-bold text-xs uppercase tracking-[0.2em]">Legal</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li><a href="#" class="hover:text-primary">Privacy Policy</a></li>
              <li><a href="#" class="hover:text-primary">Warranty</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-12 pt-8 border-t text-xs font-medium text-muted-foreground uppercase tracking-widest text-center">
          <p>© 2025 VoltCore Power Solutions. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </div>
</Layout>