---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import CardContent from '../components/CardContent.astro';

import {
  Car,
  Zap,
  Factory,
  Sun,
  Truck,
  ShieldCheck,
  Wrench,
  Package,
  FileCheck,
  HeadphonesIcon,
  Warehouse,
  FlaskConical,
  MapPin,
  Building2,
  Radio,
  Server,
  Home,
  Battery,
  Award,
  Users,
  Globe,
  ArrowRight,
} from 'lucide-react';
---
<Layout title="About">

    <div class="flex min-h-screen flex-col">
      <Navbar />
    
      <main class="flex-1">
    
        <!-- Hero -->
        <section class="relative py-20 bg-zinc-950">
          <div class="absolute inset-0 bg-[linear-gradient(to_right,#27272a_1px,transparent_1px),linear-gradient(to_bottom,#27272a_1px,transparent_1px)] bg-[size:4rem_4rem] opacity-20"></div>
          <div class="container mx-auto px-4 relative z-10 text-center space-y-4">
            <h1 class="text-4xl md:text-5xl font-bold tracking-tighter text-white">
              Powering Homes & Industries
            </h1>
            <p class="text-lg text-zinc-400 max-w-2xl mx-auto">
              Reliable energy solutions built on engineering, quality, and scale
            </p>
            <div class="h-1 w-20 bg-primary mx-auto mt-6"></div>
          </div>
        </section>
    
        <!-- Who We Are -->
        <section class="py-20">
          <div class="container mx-auto px-4 max-w-3xl text-center space-y-6">
            <h2 class="text-3xl font-bold">Who We Are</h2>
            <p class="text-muted-foreground text-lg">
              VoltCore is a trusted supplier of industrial and consumer batteries, serving
              businesses and individuals who depend on reliable energy storage.
            </p>
            <p class="text-muted-foreground">
              We focus on certified products, strong inventory, and engineering-led support —
              prioritizing reliability over marketing promises.
            </p>
          </div>
        </section>
    
        <!-- What We Do -->
        <section class="py-20 bg-zinc-100">
          <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold uppercase mb-12">What We Do</h2>
    
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6">
              {[
                { title: "Automotive Batteries", icon: Car, desc: "Two-wheelers, passenger vehicles, and fleets." },
                { title: "Inverter & Backup", icon: Zap, desc: "Home UPS and commercial backup systems." },
                { title: "Solar & Renewable", icon: Sun, desc: "Off-grid and hybrid solar storage solutions." },
                { title: "Industrial & Enterprise", icon: Factory, desc: "Telecom, data centers, infrastructure." },
                { title: "Bulk & OEM Supply", icon: Truck, desc: "Volume procurement and OEM partnerships." },
              ].map((item) => (
                <Card>
                  <CardContent class="p-6 space-y-4">
                    <div class="p-3 rounded bg-secondary inline-block">
                      <item.icon className="h-6 w-6" />
                    </div>
                    <h3 class="text-sm font-bold uppercase">{item.title}</h3>
                    <p class="text-sm text-muted-foreground">{item.desc}</p>
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        </section>
    
        <!-- Why Choose Us -->
        <section class="py-20">
          <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold uppercase mb-12">Why Choose Us</h2>
    
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 max-w-5xl">
              {[
                { title: "Certified Products", icon: ShieldCheck, desc: "All batteries meet global standards." },
                { title: "Engineering-Led Selection", icon: Wrench, desc: "Right battery, correctly sized." },
                { title: "Strong Supply Chain", icon: Package, desc: "Consistent availability & pricing." },
                { title: "Transparent Warranties", icon: FileCheck, desc: "Clear replacement policies." },
                { title: "Post-Sale Support", icon: HeadphonesIcon, desc: "Technical help when needed." },
              ].map((item) => (
                <div class="flex gap-4">
                  <item.icon className="h-5 w-5 text-primary mt-1" />
                  <div>
                    <h4 class="font-bold text-sm">{item.title}</h4>
                    <p class="text-sm text-muted-foreground">{item.desc}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </section>
    
        <!-- CTA -->
        <section class="py-20 bg-zinc-100">
          <div class="container mx-auto px-4 max-w-2xl text-center space-y-6">
            <h2 class="text-4xl font-bold">Looking for a reliable battery partner?</h2>
            <p class="text-muted-foreground text-lg">
              From single vehicles to large facilities, we help you choose the right solution.
            </p>
            <div class="flex flex-col sm:flex-row justify-center gap-4">
              <Button>
                <a href="/contact" class="flex items-center gap-2">
                  Contact Us
                  <ArrowRight className="h-4 w-4" />
                </a>
              </Button>
              <Button variant="outline">
                <a href="/b2b">B2B Solutions</a>
              </Button>
            </div>
          </div>
        </section>
      </main>
    
       
      <footer class="border-t bg-zinc-50 py-12">
        <div class="container mx-auto px-4 text-center space-y-6">
          <div class="flex justify-center items-center gap-2 font-bold text-xl">
            <Battery className="h-6 w-6 text-primary" />
            VOLT<span class="text-primary">CORE</span>
          </div>
          <p class="text-xs uppercase tracking-widest text-muted-foreground">
            © 2025 VoltCore Power Solutions. All rights reserved.
          </p>
        </div>
      </footer>
    </div>
</Layout>
