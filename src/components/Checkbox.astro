---
interface Props {
  id: string;
  name?: string;
  value?: string;
}

const { id, name, value } = Astro.props;
---

<input
  type="checkbox"
  id={id}
  name={name || id}
  value={value || id}
  class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-2 focus:ring-primary focus:ring-offset-0 cursor-pointer accent-primary"
/>